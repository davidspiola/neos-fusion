prototype(Webandco.Fusion:Component.Tag.Section) < prototype(Webandco.Fusion:Component) {

    bemClass = 'section-content'
    bemModifier = Webandco.Fusion:BemModifier
    content = Neos.Neos:ContentCollectionRenderer

    @styleguide {
        title = 'Tag: section'
        props {
            content = 'Some content...'
        }
    }

    renderer = Webandco.Fusion:Component.Tag.Section.Tag {
        tagName = 'section'

        content = Webandco.Fusion:Component.Tag.Section.Body {
            content = ${props.content}
        }
    }
}

prototype(Webandco.Fusion.Bootstrap:Component.Tag.Section) < prototype(Neos.Fusion:Component) {

    cssClass = 'section-content'
    cssModifier = Webandco.Fusion:ClassModifier
    contentTag = 'div'
    contentClass = 'row'
    content = Neos.Neos:ContentCollectionRenderer

    @styleguide {
        title = 'Tag: section (container)'
        props {
            content = 'Some content...'
        }
    }

    renderer = Neos.Fusion:Tag {
        tagName = 'section'

        // assign default class of component
        attributes.class = ${props.cssClass}
        attributes.class.@if.isset = ${!String.isBlank(props.cssClass)}

        // assign css modfieres
        attributes.class.@process.cssModifier = Webandco.Fusion:Component.ClassModifier {
            cssClass = ${props.cssClass}
            cssModifier = ${props.cssModifier}
        }

        content = Neos.Fusion:Tag {
            attributes.class = 'container'
            content = Neos.Fusion:Tag {
                tagName = ${props.contentTag}
                attributes.class = ${props.contentClass}
                content = ${props.content}
            }
        }
    }
}

